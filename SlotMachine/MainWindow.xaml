<Window x:Class="SlotMachine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SlotMachine"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Label x:Name="label1" Content="Label" HorizontalAlignment="Left" Margin="166,121,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Label" HorizontalAlignment="Left" Margin="218,121,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label3" Content="Label" HorizontalAlignment="Left" Margin="270,121,0,0" VerticalAlignment="Top"/>
        <Button x:Name="start" Content="Start" HorizontalAlignment="Left" Margin="342,242,0,0" VerticalAlignment="Top" Width="75" Click="start_Click"/>
        <Button x:Name="button1" Content="停止" HorizontalAlignment="Left" Margin="166,152,0,0" VerticalAlignment="Top" Width="38" Click="button1_Click"/>
        <Button x:Name="button2" Content="停止" HorizontalAlignment="Left" Margin="218,152,0,0" VerticalAlignment="Top" Width="38" Click="button2_Click"/>
        <Button x:Name="button3" Content="停止" HorizontalAlignment="Left" Margin="270,152,0,0" VerticalAlignment="Top" Width="38" Click="button3_Click"/>

    </Grid>
</Window>
